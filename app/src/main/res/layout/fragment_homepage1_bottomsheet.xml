<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="hospitalItem"
            type="com.kkt1019.hospitalinmyhand.data.HomePage1Item" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HomePage1BottomSheet"
        android:background="@drawable/bottomback">

        <View
            android:id="@+id/view_top"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:background="#B5B5B5" />

        <RelativeLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="50dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/map_view"
            android:drawableLeft="@drawable/icons8hospitalsign20"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="8dp"
            android:paddingBottom="10dp"
            android:text="@{hospitalItem.dutyName}"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:drawableLeft="@drawable/icons8region20"
            android:paddingLeft="10dp"
            android:paddingRight="8dp"
            android:paddingBottom="10dp"
            android:text="@{hospitalItem.dutyAddr}"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address"
            android:drawableLeft="@drawable/icons8phone20"
            android:paddingLeft="10dp"
            android:paddingRight="8dp"
            android:paddingBottom="10dp"
            android:text="@{hospitalItem.dutyTell}"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/time_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tell"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:paddingBottom="10dp"
            android:src="@drawable/icons8clock20" />


        <TextView
            android:id="@+id/timeS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tell"
            android:layout_toRightOf="@id/time_ic"
            android:paddingBottom="10dp"
            android:text="운영시간"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeC"
            android:layout_width="wrap_content"
